37 */3 * * 1-4 source ~/.bash_profile;cd ~/fx/data/fxcm/servers/Trader;~/fx/t/dataUp2Date.pl

45 22 * * 1-5 source ~/.bash_profile;cd ~/fx/data/fxcm/;testSignal.pl --start="3 days ago" "crossoverdown(low,previous(min(low,60),1)) AND min(previous(low,1),20) > previous(min(low,60),1)";testSignal.pl --start="3 days ago" "crossoverup(high,previous(max(high,60),1)) AND max(previous(high,1),20) < previous(max(high,60),1)"
